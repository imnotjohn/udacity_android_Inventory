<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/list_item"
style="@style/list_item">



<LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="8"
    android:paddingLeft="9dp" >

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/list_item_id"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:text="01"
        android:textColor="#999999"
        android:textSize="9dp"
        android:fontFamily="sans-serif-light" />
    <TextView
        style="@style/list_item_productName"
        android:id="@+id/list_item_productName"
        android:text="Product Name" />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <TextView
            style="@style/list_item_price_title"
            android:id="@+id/list_item_price_title"
            android:text="Price: $" />
        <TextView
            style="@style/list_item_price"
            android:id="@+id/list_item_price"
            android:text="3.16" />

        <TextView
            style="@style/list_item_qty_title"
            android:id="@+id/list_item_qty_title"
            android:text="Qty: " />
        <TextView
            style="@style/list_item_qty"
            android:id="@+id/list_item_qty"
            android:text="0" />

    </LinearLayout>
</LinearLayout>
    <RelativeLayout
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_marginRight="2dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_plus"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:textSize="18sp"
            android:fontFamily="sans-serif-smallcaps"
            android:layout_gravity="center"
            android:textColor="#00cc00"
            android:background="@android:color/transparent"
            android:text="+"/>
        <Button
            android:id="@+id/btn_minus"
            android:layout_below="@+id/btn_plus"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:textSize="15sp"
            android:layout_marginTop="7dp"
            android:fontFamily="sans-serif-smallcaps"
            android:layout_gravity="center"
            android:textColor="#ff0000"

            android:background="@android:color/transparent"
            android:text="â€”"/>
    </RelativeLayout>
<ImageView
    android:id="@+id/list_item_image"
    android:src="@mipmap/ic_launcher"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:background="#f6f6f6"
    android:layout_weight="1"
    android:layout_marginRight="12dp" />


</LinearLayout>
