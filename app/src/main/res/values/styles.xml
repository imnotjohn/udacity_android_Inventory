<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="list_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:background">#FFFFFF</item>
    </style>
    <style name="list_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="list_item_empty">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">9</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textColor">#ff0000</item>
    </style>

    <style name="defaultTextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="list_item_productName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">9</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textColor">#333333</item>
    </style>
    <style name="list_item_productDetail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textColor">#333333</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="list_item_qty">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textColor">#888888</item>
        <item name="android:layout_gravity">right</item>
    </style>
    <style name="list_item_price">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_toRightOf">@+id/list_item_price_title</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textColor">#888888</item>
        <item name="android:layout_below">@+id/list_item_qty</item>
        <item name="android:layout_gravity">right</item>
    </style>
    <style name="list_item_qty_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_toRightOf">@+id/list_item_qty_title</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textColor">#888888</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:paddingLeft">24dp</item>
    </style>
    <style name="list_item_price_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textColor">#888888</item>
        <item name="android:layout_below">@+id/list_item_qty</item>
        <item name="android:layout_gravity">right</item>
    </style>



    <style name="btn_img_gallery">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textColor">#888888</item>
        <item name="android:gravity">center</item>
        <item name="android:text">gallery</item>
    </style>

</resources>
